generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            BigInt   @id @default(autoincrement())
  email         String   @unique @db.VarChar(255)
  password_hash String   @db.VarChar(255)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  company Company?

  @@map("users")
}

model Company {
  id                          BigInt   @id @default(autoincrement())
  user_id                     BigInt   @unique
  company_name                String   @db.VarChar(255)
  brand_name                  String?  @db.VarChar(255)
  about_text                  String?  @db.Text
  site_url                    String?  @db.VarChar(255)
  contact_url                 String?  @db.VarChar(255)
  wp_base_url                 String   @db.VarChar(255)
  wp_username                 String   @db.VarChar(255)
  wp_app_password_secret_name String   @db.VarChar(255)
  wp_default_status           String   @default("draft") @db.VarChar(20)
  created_at                  DateTime @default(now())
  updated_at                  DateTime @updatedAt

  user         User          @relation(fields: [user_id], references: [id], onDelete: Cascade)
  postProfiles PostProfile[]

  @@map("companies")
}

model PostProfile {
  id               BigInt   @id @default(autoincrement())
  company_id       BigInt
  name             String   @db.VarChar(255)
  description      String?  @db.Text
  wp_category_id   BigInt?
  keyword_strategy Json     @default("{}")
  is_active        Boolean  @default(true)
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  company      Company                  @relation(fields: [company_id], references: [id], onDelete: Cascade)
  articleTypes PostProfileArticleType[]
  schedule     PostProfileSchedule?

  @@map("post_profiles")
}

model PostProfileArticleType {
  id              BigInt   @id @default(autoincrement())
  post_profile_id BigInt
  name            String   @db.VarChar(255)
  description     String?  @db.Text
  prompt_template String   @db.Text
  is_enabled      Boolean  @default(true)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  postProfile PostProfile @relation(fields: [post_profile_id], references: [id], onDelete: Cascade)

  @@map("post_profile_article_types")
}

model PostProfileSchedule {
  post_profile_id    BigInt   @id
  schedule_type      String   @default("none") @db.VarChar(20)
  daily_time         String?  @db.VarChar(5)
  weekly_day_of_week Int?
  weekly_time        String?  @db.VarChar(5)
  cron_expression    String?  @db.Text
  is_enabled         Boolean  @default(false)
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  postProfile PostProfile @relation(fields: [post_profile_id], references: [id], onDelete: Cascade)

  @@map("post_profile_schedules")
}
